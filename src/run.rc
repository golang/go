rfork e

if(! test -f ../bin/go){
	echo 'run.rc must be run from $GOROOT/src after installing cmd/go' >[1=2]
	exit wrongdir
}

GOENV=off
eval `{../bin/go tool dist env}

GOPATH=/nonexist-gopath
exec ../bin/go tool dist test -rebuild $*
