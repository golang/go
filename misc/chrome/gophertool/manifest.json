{
  "name": "Hacking Gopher",
  "version": "1.1",
  "manifest_version": 3,
  "description": "Go Hacking utility",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "omnibox": {
    "keyword": "golang"
  },
  "icons": {
    "16": "gopher.png"
  },
  "permissions": [
    "tabs"
  ],
  "action": {
    "default_icon": "gopher.png",
    "default_popup": "popup.html"
  }
}
